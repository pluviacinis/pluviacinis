def Cor(x,y):
    devx= np.std(x)
    devy= np.std(y)
    nx=len(x)
    Sum=[]
    for i in range(nx):
        sl = (((x[i]-np.mean(x))/devx)*((y[i]-np.mean(y))/devy))
        Sum.append(sl)
    E=np.sum(Sum)
    r=E/nx
    return r

